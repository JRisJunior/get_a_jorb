<div class="container">
<h1>Job</h1>
<img src="<%= @job.company.logo%>" style="max-height: 200px; max-width: 200px;" >
<h3><%= @job.title %></h3>
<hr />
<p>Description: <%= @job.description %></p>
<p>Location: <%= @job.location %></p>
<p>Salary Range: <%= @job.salary_range %></p>
<p><a href=<%= @job.url %>> Direct Link to Job Site</a></p>
<li>Tags: <% @job.tags.each do |tag|%>
    <%= tag.name%> |
    <% end%>
    </li>
<hr />
<a href="/jobs">Back to all jobs</a>

</div>